@echo off
cd /d "%cd%"
echo cleaning %cd%...

REM Visual Studio...
echo cleaning packages...
FOR /d /r . %%d IN (packages\) DO @IF EXIST "%%d" rd /s /q "%%d"
echo cleaning pkg...
FOR /d /r . %%d IN (pkg\) DO @IF EXIST "%%d" rd /s /q "%%d"
echo cleaning pkgobj...
FOR /d /r . %%d IN (pkgobj\) DO @IF EXIST "%%d" rd /s /q "%%d"

REM _ReSharper
echo cleaning _ReSharper...
FOR /d /r . %%d IN (_ReSharper.*) DO @IF EXIST "%%d\" rd /s /q "%%d"

REM VSCode...
echo cleaning .vscode...
FOR /d /r . %%d IN (.vscode\) DO @IF EXIST "%%d" rd /s /q "%%d"

REM angular...
echo cleaning node_modules...
FOR /d /r . %%d IN (node_modules\) DO @IF EXIST "%%d" rd /s /q "%%d"
echo cleaning e2e...
IF EXIST e2e\ (
	del /F /Q e2e\*.js 2>NUL
	del /F /Q e2e\*.map 2>NUL
)

REM IntelliJ/Android Studio...
echo cleaning captures...
IF EXIST captures\ rd /s /q captures
