FOR /d /r . %%d IN (out-tsc\) DO @IF EXIST "%%d" rd /s /q "%%d"
echo cleaning .sass-cache...
FOR /d /r . %%d IN (.sass-cache\) DO @IF EXIST "%%d" rd /s /q "%%d"
echo cleaning coverage...
FOR /d /r . %%d IN (coverage\) DO @IF EXIST "%%d" rd /s /q "%%d"
